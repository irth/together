<h1>Playlists#show</h1>
<p>Find me in app/views/playlists/show.html.erb</p>
<h1><%= @playlist.key %>, <%= @playlist.id %>, <%= @playlist.user1 %> <%= @playlist.user2 %></h1>

<% flash.each do |key, value| %>
    <div class="flash-<%= key %>}"><%= key %>: <%= value %></div>
<% end %>
<pre>

<%= join_playlist_url(@playlist.id, key: @playlist.key) %>
playlist ready: <%= @playlist.ready? %>
<% if @playlist.ready? %>

Somgs:
<% @playlist.tracks.each do |track| %>
	* <%= track.artists.join(", ") %> - <%= track.title %>
<% end %>
<%= link_to 'save', save_playlist_path(@playlist) %>
<% end %>
	</pre>	
<div>
own status:
<span
	id="sync-status"
	data-behavior="sync_status"
	data-self
	data-user="<%= current_user.id %>"
	data-playlist-id="<%= @playlist.id %>"
	data-ready="<%= @playlist.ready? %>"
>
	<%= render partial: "status", locals: { syncing: false, playlist: @playlist, user: current_user } %>
</span>
</div>
<% if @playlist.full? %>
<div>
other:
<span
	id="sync-status"
	data-behavior="sync_status" 
	data-user="<%= @playlist.other_user(current_user).id %>"
>
	<%= render partial: "status", locals: { syncing: false, playlist: @playlist, user: @playlist.other_user(current_user) } %>
</span>
</div>
<% end %>